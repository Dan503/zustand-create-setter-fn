{
	"name": "zustand-create-setter-fn",
	"description": "A fully type safe utility for Zustand that allows you to easily update state using React style `setState` functions (framework agnostic, doesn't require React).",
	"homepage": "https://dan503.github.io/zustand-create-setter-fn/",
	"repository": {
		"type": "GitHub",
		"url": "https://github.com/Dan503/zustand-create-setter-fn",
		"directory": "/"
	},
	"license": "MIT",
	"private": false,
	"version": "1.0.4",
	"type": "module",
	"main": "npm/index.cjs",
	"module": "npm/index.js",
	"types": "npm/index.d.ts",
	"exports": {
		".": {
			"types": "./npm/index.d.ts",
			"import": "./npm/index.js",
			"require": "./npm/index.cjs"
		}
	},
	"files": [
		"npm/",
		"README.md",
		"LICENSE",
		"src/assets/github-logo.svg",
		"src/assets/npm-logo.svg",
		"src/core/index.ts"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"start": "vite",
		"build": "tsc -b && vite build",
		"prepublishOnly": "vitest run && tsup src/core/index.ts --format esm,cjs --dts --out-dir npm",
		"test": "vitest",
		"lint": "eslint .",
		"preview": "vite preview"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.1.7",
		"@types/react-syntax-highlighter": "^15.5.13",
		"@vitejs/plugin-react": "^5.0.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-syntax-highlighter": "^15.6.6",
		"tsup": "^8.5.0",
		"typescript": "~5.9.2",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"vitest": "^3.2.4",
		"zustand": "^5.0.8"
	},
	"peerDependencies": {
		"zustand": ">=3.0.2 <6"
	},
	"keywords": [
		"zustand",
		"react-zustand",
		"zustand-utils",
		"zustand-vanilla",
		"state-management",
		"state-setter",
		"setter-function",
		"create-setter",
		"set-state",
		"setstate",
		"state-updater",
		"store-setter",
		"store-updater",
		"update-state",
		"typescript",
		"type-safe",
		"generics",
		"factory",
		"utility"
	]
}
